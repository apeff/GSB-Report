{% extends "layout.html.twig" %}
{% set drugMenu = true %}

{% block title %}Médicaments{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if drugs %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Type</th>
                </tr>
            </thead>
            {% for drug in drugs %}
                <tr>
                    <td><a href="/drugs/{{ drug.id }}">{{ drug.tradeName }}</a></td>
                    <td>{{ drug.family.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun médicament trouvé.</div>
{% endif %}   
{% endblock %}
